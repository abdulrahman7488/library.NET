@model Bookshop.Models.CategoryBookViewModel

@{ ViewBag.Title = "Home Page"; }

@*header-wrap*@



<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2>Categories</h2>
            <ul class="nav nav-pills justify-content-center">
                @foreach (var Categories in Model.Categories)
                {
    <li class="nav-item">
        <a class="nav-link" href="@Url.Action("BooksByCategory", "Categories", new { id = Categories.CategoryID })">
            @Categories.CategoryName
        </a>
    </li>}
            </ul>
        </div>

    </div>
</div>

<!-- نموذج البحث -->
<form action="@Url.Action("Index", "Books")" method="get">
    <div>
        <label for="searchQuery">بحث:</label>
        <input type="text" id="searchQuery" name="searchQuery" placeholder="ابحث عن اسم الكتاب أو الكاتب" value="@Request.QueryString["searchQuery"]" />
    </div>
    <button type="submit">بحث</button>
</form>

