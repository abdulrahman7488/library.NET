@model IEnumerable<Bookshop.Models.Book>
@{
    ViewBag.Title = "BooksByCategory";
}

<div class="container">
    <h2>Books in @Model</h2>
    <div class="row">
        @foreach (var book in Model)
        {
            <div class="col-md-3">
                <div class="card">
                    <img src="@book.image" class="card-img-top" alt="Cover Image">
                    <div class="card-body">
                        <h5 class="card-title">@book.Title</h5>
                        <p class="card-text">@book.Author</p>
                        <p class="card-text">$@book.Price</p>
                        <a href="@Url.Action("Details", "Book", new { id = book.BookID })" class="btn btn-primary">View Details</a>
                    </div>
                </div>
            </div>}
    </div>
</div>



<h2>Books in Category</h2>
<ul>
    @foreach (var book in Model)
    {
        <li>@book.Title - @book.Author</li>
    }
</ul>

